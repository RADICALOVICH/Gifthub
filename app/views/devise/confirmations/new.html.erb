<div class="resend-confirmation-container">
  <h2>Переотправить письмо подтверждения</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-container" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label 'Электронная почта' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Переотправить", class: "submit-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
