<div class="forgot-password-container">
  <h2>Забыли пароль?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-container" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Сбросить пароль", class: "submit-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
