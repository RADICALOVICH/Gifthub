<div class="login-container">
  <h2>Вход в систему</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-container' }) do |f| %>
    <div class="field">
      <%= f.label :email, 'Почта' %><br />
      <%= f.email_field :email, class: 'text-field', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, 'Пароль' %><br />
      <%= f.password_field :password, class: 'text-field', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label 'Запомнить меня' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Войти", class: 'submit-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
