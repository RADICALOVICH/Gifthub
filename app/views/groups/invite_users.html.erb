<%= form_with url: groups_send_email_path, method: :post do |form| %>
  <%= form.hidden_field :group_id, value: @group_id %>
  <p><%= form.label :user_id, "Выберите человека" %></p>
  <p><%= form.collection_select :user_id, @users, :id,:first_name, include_blank: false%></p>
  <p><%= form.submit("Отправить приглашение") %></p>
<% end %>